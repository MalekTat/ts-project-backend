generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Plant {
  id             Int              @id @default(autoincrement())
  name           String
  waterFrequency Int
  sunlight       String?
  notes          String?
  imageUrl       String?
  wateringLogs   WateringLog[]
  growthLogs     GrowthTracking[]
}

model WateringLog {
  id           Int      @id @default(autoincrement())
  plantId      Int
  wateredAt    DateTime
  notes        String?

  plant        Plant    @relation(fields: [plantId], references: [id])
}

model GrowthTracking {
  id           Int      @id @default(autoincrement())
  plantId      Int
  trackedAt    DateTime
  height       Float?
  notes        String?
  imageUrl     String?   // Added field for images

  plant        Plant    @relation(fields: [plantId], references: [id])
}